<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BroadCastActivity">

    <Button
        android:id="@+id/btn_sendNormalMyBroadCast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送消息到MyBroadCast"></Button>


    <Button
        android:id="@+id/btn_sendBroadCast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送普通的广播"></Button>

    <Button
        android:id="@+id/btn_sendOrderBroadCast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送有序广播"></Button>

</LinearLayout>